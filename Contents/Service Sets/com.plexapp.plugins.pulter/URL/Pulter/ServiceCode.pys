def MetadataObjectForURL(url):

    data = HTML.ElementFromURL(url)
    
    if '/cinema/' in url:
      title = data.xpath('//div[@class="player"]//a')[0].text
      summary = data.xpath('//div[@class="player"]//p')[0].text
      thumb = R('icon-default.png')
      
      xml_url = GetVideoXMLURL(url)
      data = XML.ElementFromURL(xml_url)
      duration = int(data.xpath('//duration')[0].text)
  
      mo = MovieObject(
          title = title,
          summary = summary,
          duration = duration,
          thumb = thumb
          )
    else: #be prepared to handle other cases (eg. TV episodes)
      pass
    return mo
  
