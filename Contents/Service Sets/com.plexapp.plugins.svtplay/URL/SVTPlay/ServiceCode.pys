def MediaObjectsForURL(url):
    return [
            MediaObject(
                parts = [
                    PartObject(key=HTTPLiveStreamURL(Callback(PlayVideo, url=url)))
                    ],
                audio_channels = 2,
                optimized_for_streaming = True
                )
            ]

