# Source: https://github.com/rg3/youtube-dl/blob/master/youtube_dl/extractor/youtube.py
def decrypt_signature(s):

  Log('Sig length is: %s' % len(s))

  if len(s) == 92:
    return s[25] + s[3:25] + s[0] + s[26:42] + s[79] + s[43:79] + s[91] + s[80:83]
  elif len(s) == 91:
    return s[84:27:-1] + s[86] + s[26:5:-1]
  elif len(s) == 90:
    return s[25] + s[3:25] + s[2] + s[26:40] + s[77] + s[41:77] + s[89] + s[78:81]
  elif len(s) == 89:
    return s[3:7] + s[62] + s[8:40] + s[0] + s[41:62] + s[40] + s[63:65] + s[86] + s[66:84]
  elif len(s) == 88:
    return s[48] + s[81:67:-1] + s[82] + s[66:62:-1] + s[85] + s[61:48:-1] + s[67] + s[47:12:-1] + s[3] + s[11:3:-1] + s[2] + s[12]
  elif len(s) == 87:
    return s[40]+s[82:53:-1]+s[3]+s[52:40:-1]+s[85]+s[39:10:-1]+s[0]+s[9:5:-1]+s[2:0:-1]+s[53]
  elif len(s) == 86:
    return s[45] + s[1:36] + s[0] + s[37:45] + s[36] + s[46:84]
  elif len(s) == 85:
    return s[5] + s[1:5] + s[61] + s[6:13] + s[82] + s[14:61] + s[0] + s[62:81]
  elif len(s) == 84:
    return s[78:70:-1] + s[14] + s[69:37:-1] + s[70] + s[36:14:-1] + s[80] + s[:14][::-1]
  elif len(s) == 83:
    return s[45] + s[1:36] + s[0] + s[37:45] + s[36] + s[46:81]
  elif len(s) == 82:
    return s[80:37:-1] + s[7] + s[36:7:-1] + s[0] + s[6:0:-1] + s[37]
  elif len(s) == 81:
    return s[45] + s[1:36] + s[0] + s[37:45] + s[36] + s[46:79]
  elif len(s) == 80:
    return s[1:19] + s[0] + s[20:68] + s[19] + s[69:80]
  elif len(s) == 79:
    return s[54] + s[77:54:-1] + s[39] + s[53:39:-1] + s[78] + s[38:34:-1] + s[0] + s[33:29:-1] + s[34] + s[28:9:-1] + s[29] + s[8:0:-1] + s[9]
  else:
    Log('Unable to decrypt signature, key length %d not supported; retrying might work' % (len(s)))
    raise Ex.MediaNotAvailable
